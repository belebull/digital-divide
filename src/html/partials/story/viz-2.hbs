<div class="chart-area" id="comparison">
  <div class="svg-title">
    <div class="svg-header" id="comparison-header">Broadband Availability vs.
      Usage</div>
    <div class="svg-subheader" id="comparison-subheader">
      <span>
        In
        <select class="svg-input" id="comparison-state"></select>
        , on average,
      </span>
      <span id="comparison-availability-text"><span
          class="svg-output"
          id="comparison-availability"
        > 20% </span>
        of each county has access to broadband
      </span>
      <span id="comparison-conjunction"> but only </span>
      <span id="comparison-usage-text"><span
          class="svg-output"
          id="comparison-usage"
        > 40% </span>
        makes use of it.
      </span>
    </div>
    <div class="svg-note">Select a state to see other counties. The larger the
      circle, the larger the county's popualtion.</div>
  </div>
  <div class="graphic-content">
    <div class="left-panel" id="comparison-plot"></div>
    <div class="right-panel">
      <div id="comparison-table-header">
        <span class="selection">United States</span>
        Counties
      </div>
      <div class="comparison-table-callout">
        <div class="table-stat">
          <div id="comparison-table-stat-usage"></div>
          <div>Estimated number of people without access to internet in
            <span class="selection"></span>
          </div>
        </div>
        <div class="table-stat">
          <div id="comparison-table-stat-availability"></div>
          <div>Estimated number of people who do not use the internet in
            <span class="selection"></span>
          </div>
        </div>
      </div>
      <div class="table" id="comparison-table">
        <table id="comparison-table">
          <thead>
            <th class="table-header">County</th>
            <th class="table-header">Availability</th>
            <th class="table-header">Usage</th>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>
