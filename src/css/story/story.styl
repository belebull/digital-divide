/* SECTION */
.section
  margin 50px 100px
  min-height: 600px

.visualization
  font-family $sans
  background-color: $off-white
  padding-top 50px
  width 100%
  text-align center

.article-text
  font-size 14px
  margin-left 30%
  margin-right 30%
  margin-top 30px
  margin-bottom 50px
  text-align center
  display block

.article-text>p
  line-height 32px
  &>a
    border-bottom 2px solid $dark-blue
    color $dark-blue

/*TEXT STYLES*/
.blue-highlight
  background-color $dark-blue
  border-radius 3px
  color white
  padding 5px
  margin 0 2px


/*VISUALIZATION STYLES: Headers*/
.header
  text-align center

.title
  font-size: x-large;
  font-weight: 700;
  margin: 10px 0px 40px

.subtitle
  font-size: large;
  margin-bottom: 25px;

.subtitle .highlight
  font-weight 600
  background-color $dark-blue
  padding 7px 10px
  color white
  border-radius 3px
  &.highlight-light
    background-color $light-blue

.inputs
  font-family $sans-fb
  display inline-flex
  flex-direction column
  font-size large
  padding 10px 2px

.inputs.selection
  font-family $national
  border none
  border-bottom 3px solid blue
  color $black
  font-size large
  background-color: none
  padding 10px

.note
    font-size small
    font-style: italic
    color $gray-dark
    line-height: 28px
    margin 10px

/*VISUALIZATION STYLES: Chart Components*/
.chart
  display block
  margin 0 auto
  height: 100%

.axis-label
  font-family 'Roboto'
  font-size small
  font-weight 600


// OLD STYLES
.svg-header
  font-family $sans
  font-size 24px
  line-height 48px
  font-weight 600

.svg-subheader
    font-size 18px
    line-height 36px

.svg-note
    font-size 14px
    font-style: italic
    color $gray-dark
    line-height: 28px
    margin 10px

.svg-axis-label
  font-size: 10px
  font-family: $sans-display
  color $gray-dark

.tooltip
  background-color white
  border 1px solid gray
  display flex

.plot-output
  font-weight 600
  background-color #253494
  padding 7px
  color white

.summary
  text-align: center
